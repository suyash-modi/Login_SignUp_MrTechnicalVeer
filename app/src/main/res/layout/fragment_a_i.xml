<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AIFragment"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:backgroundTint="@color/black"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Text Input for Prompt -->
        <EditText
            android:id="@+id/etPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter text to generate wallpaper"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Button to Generate Image -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Wallpaper"
            android:backgroundTint="#008CBA"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <!-- Progress Bar (Hidden Initially) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Placeholder Text Before Image is Loaded -->
        <TextView
            android:id="@+id/tvPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generated wallpaper will appear here"
            android:textSize="16sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <!-- Generated Image -->
        <ImageView
            android:id="@+id/ivGeneratedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        <!-- Button to Download Image -->
        <Button
            android:id="@+id/btnDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Image"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
